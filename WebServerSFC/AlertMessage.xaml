<Window x:Class="SentinelaRoku.AlertMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SentinelaRoku"
        mc:Ignorable="d"
        Title="AlertMessage" Height="600" Width="900" WindowStyle="ToolWindow" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFF6D00">
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label Content="Erro ao logar o Serial Number!" Margin="10,10,10,0" VerticalAlignment="Top" FontFamily="Consolas" FontSize="48" FontWeight="Bold" HorizontalContentAlignment="Center" UseLayoutRounding="True"/>
        <TextBox x:Name="tb_MessageWebService" Height="331" Margin="200,10,200,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Background="White" FontFamily="Consolas" FontSize="16" HorizontalContentAlignment="Center"/>
        <Button x:Name="bt_Fechar" Content="Fechar" Margin="250,25" Grid.Row="2" Height="Auto" FontFamily="Consolas" FontWeight="Bold" FontSize="36" Background="#FF7F0000" Click="bt_Fechar_Click"/>

    </Grid>
</Window>
